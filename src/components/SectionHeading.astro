---
export interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  class?: string;
}

const { title, subtitle, centered = false, class: className = "" } = Astro.props;
---

<div class:list={["mb-12", centered && "text-center", className]}>
  <h2 class="text-3xl md:text-4xl font-bold text-green-dark mb-4 font-display">{title}</h2>
  {subtitle && <p class="text-lg text-gray-700">{subtitle}</p>}
</div>