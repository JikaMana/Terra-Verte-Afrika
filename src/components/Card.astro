---
export interface Props {
  title: string;
  image?: string;
  imageAlt?: string;
  class?: string;
}

const { title, image, imageAlt = "", class: className = "" } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02] ${className}`}>
  {image && (
    <div class="aspect-video overflow-hidden">
      <img src={image} alt={imageAlt} class="w-full h-full object-cover" />
    </div>
  )}
  <div class="p-6">
    <h3 class="text-xl font-bold text-green-dark mb-3">{title}</h3>
    <div class="prose prose-green">
      <slot />
    </div>
  </div>
</div>