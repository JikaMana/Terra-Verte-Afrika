---
import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import Button from '../components/Button.astro';

// Placeholder images - replace with actual images in production
const heroImage = "https://images.unsplash.com/photo-1423666639041-f56000c27a9a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1974&q=80";
---

<Layout title="Contact Us">
  <!-- Hero Section -->
  <section class="relative">
    <div class="absolute inset-0 bg-black/50 z-10"></div>
    <div class="relative h-[40vh] overflow-hidden">
      <img 
        src={heroImage} 
        alt="Contact Terra Verte Afrika" 
        class="absolute w-full h-full object-cover"
      />
    </div>
    
    <div class="absolute inset-0 z-20 flex items-center justify-center text-center px-4">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 font-display">
          Contact Us
        </h1>
        <p class="text-xl text-cream-light max-w-3xl mx-auto">
          Get in touch with our team to learn more about our work or how you can get involved.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <SectionHeading 
            title="Get In Touch" 
            subtitle="We'd love to hear from you! Reach out with questions, partnership inquiries, or to learn more about our work."
          />
          
          <div class="space-y-8 mt-8 flex flex-wrap items-start justify-normal">
            <div class="flex items-start">
              <div class="bg-green-light p-3 rounded-full mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-green-dark mb-1">Email</h3>
                <p class="text-gray-700 mb-1">General Inquiries:</p>
                <a href="mailto:terraverteafrika@gmail.com" class="text-green hover:underline">terraverteafrika@gmail.com</a>
                
                <p class="text-gray-700 mb-1 mt-3">Partnership Opportunities:</p>
                <a href="mailto:partnerships@terraverteafrika.org" class="text-green hover:underline">partnerships@terraverteafrika.org</a>
                
                <p class="text-gray-700 mb-1 mt-3">Media Inquiries:</p>
                <a href="mailto:media@terraverteafrika.org" class="text-green hover:underline">media@terraverteafrika.org</a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-green-light p-3 rounded-full mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-green-dark mb-1">Phone</h3>
                <p class="text-gray-700 mb-1">Main Office:</p>
                <a href="tel:+2348001234567" class="text-green hover:underline">+234 810 053 4535</a>
                
                <p class="text-gray-700 mb-1 mt-3">Volunteer Coordinator:</p>
                <a href="tel:+2348009876543" class="text-green hover:underline">+234 800 987 6543</a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-green-light p-3 rounded-full mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-green-dark mb-1">Location</h3>
                <p class="text-gray-700 mb-1">Headquarters:</p>
                <p class="text-gray-700">
                  Abuja, Nigeria
                </p>
                
               
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-green-light p-3 rounded-full mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-green-dark mb-1">Hours</h3>
                <p class="text-gray-700 mb-1">Monday - Friday:</p>
                <p class="text-gray-700">9:00 AM - 5:00 PM WAT</p>
                
                <p class="text-gray-700 mb-1 mt-3">Saturday (By Appointment):</p>
                <p class="text-gray-700">10:00 AM - 2:00 PM WAT</p>
                
                <p class="text-gray-700 mb-1 mt-3">Sunday:</p>
                <p class="text-gray-700">Closed</p>
              </div>
            </div>
          </div>
          
          <div class="mt-12">
            <h3 class="text-xl font-bold text-green-dark mb-4">Connect With Us</h3>
            <div class="flex space-x-4">
           
              <a href="https://www.instagram.com/terraverteafrika?igsh" class="bg-green-light p-3 rounded-full text-white hover:bg-green transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              <a href="https://x.com/TerraAfrika?t=FAPA0njimfmRBwvFdFvCHA&s=09" class="bg-green-light p-3 rounded-full text-white hover:bg-green transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                </svg>
              </a>
          
            </div>
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md h-max">
          <h3 class="text-2xl font-bold text-green-dark mb-6">Send Us a Message</h3>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name *</label>
                <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green focus:border-green">
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address *</label>
                <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green focus:border-green">
              </div>
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject *</label>
              <input type="text" id="subject" name="subject" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green focus:border-green">
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Your Message *</label>
              <textarea id="message" name="message" rows="6" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green focus:border-green"></textarea>
            </div>
              <h2 class="block text-lg font-medium text-gray-700 mb-1">Please contact directly through email, or any of out social as this form is under maintenance</h2>
            
            <div>
              <Button type="submit">Send Message</Button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </section>


